{
  "name": "c2c_tracking",
  "version": "1.0.0-rc.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Tiny server to handle connection with activity trackers such as Strava, Garmin or Suunto",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts | pino-pretty -c -t",
    "start:dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts | pino-pretty -c -t -i req.headers,res.headers\"",
    "build": "tsc",
    "lint": "prettier --check \"**/*.{ts,js,json,css,scss,less,md,html}\" && eslint --report-unused-disable-directives --ext .ts,.js .",
    "prepare": "husky install",
    "test": "npm run test:unit && npm run test:psql",
    "test:ci": "npm run test:ci:unit && npm run test:ci:psql",
    "test:unit": "jest --runInBand",
    "test:ci:unit": "jest --config jest.config.ci.mjs --runInBand",
    "test:psql": "jest --config jest.config.psql.mjs --runInBand",
    "test:ci:psql": "npm run test:ci:psql:init && jest --config jest.config.psql.ci.mjs --runInBand",
    "test:ci:psql:init": "ts-node test/environment/init-db.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c2corg/c2c_tracking.git"
  },
  "author": "https://www.camptocamp.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c2corg/c2c_tracking/issues"
  },
  "homepage": "https://github.com/c2corg/c2c_tracking#readme",
  "dependencies": {
    "@c2corg/fit-parser-extract-geometry": "1.0.0",
    "@koa/cors": "4.0.0",
    "@koa/router": "12.0.0",
    "@mapbox/polyline": "1.1.1",
    "async": "3.2.4",
    "axios": "1.1.3",
    "cls-rtracer": "2.6.2",
    "convict": "6.2.3",
    "crypto-js": "4.1.1",
    "dayjs": "1.11.6",
    "dayjs-plugin-utc": "0.1.2",
    "dotenv": "16.0.3",
    "dotenv-expand": "9.0.0",
    "keyv": "4.5.0",
    "knex": "2.3.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-passport": "5.0.0",
    "koa-pino-logger": "4.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "pg": "8.8.0",
    "prom-client": "14.1.0",
    "validator": "13.7.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "5.0.1",
    "@tsconfig/node18-strictest": "1.0.0",
    "@types/async": "3.2.15",
    "@types/convict": "6.1.1",
    "@types/crypto-js": "4.1.1",
    "@types/jest": "29.2.1",
    "@types/koa": "2.13.5",
    "@types/koa__cors": "3.3.0",
    "@types/koa__router": "12.0.0",
    "@types/koa-bodyparser": "4.3.9",
    "@types/koa-passport": "4.0.3",
    "@types/koa-pino-logger": "3.0.1",
    "@types/mapbox__polyline": "1.0.2",
    "@types/node": "18.11.9",
    "@types/passport-jwt": "3.0.7",
    "@types/pg": "8.6.5",
    "@types/supertest": "2.0.12",
    "@types/validator": "13.7.10",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.1",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-security": "1.5.0",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "jest-junit": "14.0.1",
    "lint-staged": "13.0.3",
    "node-mocks-http": "1.11.0",
    "nodemon": "2.0.20",
    "passport-custom": "1.1.1",
    "pino-pretty": "9.1.1",
    "prettier": "2.7.1",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "type-fest": "3.1.0",
    "typescript": "4.8.4"
  }
}
