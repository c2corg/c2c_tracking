{
  "name": "tracker-connect",
  "version": "1.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "description": "Tiny server to handle connection with activity trackers such as Strava, Garmin or Suunto",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts | pino-pretty -c -t",
    "start:dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts | pino-pretty -c -t -i req.headers,res.headers\"",
    "build": "tsc",
    "lint": "prettier --check \"**/*.{ts,js,json,css,scss,less,md,html}\" && eslint --ext .ts,.js src/",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunobesson/tracker-connect.git"
  },
  "author": "https://www.camptocamp.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brunobesson/tracker-connect/issues"
  },
  "homepage": "https://github.com/brunobesson/tracker-connect#readme",
  "dependencies": {
    "@koa/cors": "3.4.1",
    "@koa/router": "12.0.0",
    "@mapbox/polyline": "1.1.1",
    "async": "3.2.4",
    "axios": "0.27.2",
    "cls-rtracer": "2.6.2",
    "convict": "6.2.3",
    "dayjs": "1.11.5",
    "dotenv": "16.0.2",
    "dotenv-expand": "9.0.0",
    "form-data": "4.0.0",
    "joi": "17.6.0",
    "keyv": "4.4.1",
    "knex": "2.2.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-pino-logger": "4.0.0",
    "pg": "8.8.0",
    "validator": "13.7.0"
  },
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "1.0.1",
    "@types/async": "3.2.15",
    "@types/convict": "6.1.1",
    "@types/keyv": "3.1.4",
    "@types/koa": "2.13.5",
    "@types/koa__cors": "3.3.0",
    "@types/koa__router": "8.0.11",
    "@types/koa-bodyparser": "4.3.7",
    "@types/koa-pino-logger": "3.0.1",
    "@types/mapbox__polyline": "1.0.2",
    "@types/node": "18.6.1",
    "@types/pg": "8.6.5",
    "@types/validator": "13.7.6",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-security": "1.5.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.19",
    "pino-pretty": "9.1.0",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.2"
  }
}
